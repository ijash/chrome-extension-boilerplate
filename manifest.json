{
    "manifest_version": 3,
    "name": "My First Chrome Extension",
    "version": "1.0",
    "description": "A simple Chrome extension to demonstrate functionality.",
    "icons": {
        "16": "./icons/app/16.png",
        "48": "./icons/app/48.png",
        "128": "./icons/app/128.png"
    },
    "permissions": [
        "activeTab"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "./icons/app/48.png"
    }
}